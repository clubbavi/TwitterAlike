<div class="col-md-6 col-md-offset-3" style="margin-top: 50px;">
  <div class="panel panel-primary">
    <!-- Default panel contents -->
    <div class="panel-heading">Forgot your password?</div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, :class => "col-md-6 form-control" %>
          </div>

          <div class="actions" align="center">
            <%= f.submit "Send me reset password instructions", :class => "btn btn-default", :style => "margin-top: 10px; margin-bottom: 10px;" %>
          </div>
      <% end %>

      <div class="actions" align="center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>